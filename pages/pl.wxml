<!--pages/pl.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    
    <view class="page__bd">
        <view class="weui-cells__title">评价内容</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" bindinput="listenerAddressInput" placeholder="请输入文本" style="height: 3.3em" />
                    <view class="weui-textarea-counter"></view>
                </view>
            </view>
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary"  bindtap="submitBtn">确定</button>
        </view>
    </view>
</view>
